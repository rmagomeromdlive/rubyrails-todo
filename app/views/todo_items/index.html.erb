<div class="content list">
<h1>Tasks</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todo_items.each do |todo_item| %>
  <tr class="table-content">
    <td><%= todo_item.description %></td>
    <td><%= todo_item.completed %></td>
    <td><%= link_to 'Edit', edit_todo_list_todo_item_path(todo_item.todo_list, todo_item), :class=>"todo-btn blue-border" %></td>
    <td><%= link_to 'Delete', [todo_item.todo_list, todo_item], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"todo-btn red-border" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Task', new_todo_list_todo_item_path(params[:todo_list_id]) , class:"todo-btn blue" %>
<%= link_to 'Back to TODO List', todo_lists_path , class:"todo-btn blue" %>

</div>
