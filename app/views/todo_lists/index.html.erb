<p id="notice"><%= notice %></p>

<div class="list">
<h1 class="title" >TODO List</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr class="table-content">
        <td class="todo-title"><%= link_to todo_list.title , edit_todo_list_path(todo_list) %></td>
        <td><%= link_to 'Show Tasks', todo_list,:class=>"todo-btn blue-border"  %></td>
        <td><%= link_to 'Delete', todo_list,:class=>"todo-btn red-border", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New TODO', new_todo_list_path, :class=>"todo-btn blue"%>


</div>

